<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_margin="20dp"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:orientation="vertical" >



            <RadioButton
                android:id="@+id/step_normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:checked="true"
                android:gravity="center"
                android:text="手持模式"
                android:textColor="@drawable/step_mode_btn"
                android:textSize="25sp"
                android:textStyle="normal|bold" />



            <RadioButton
                android:id="@+id/step_pocket"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/step_mode_step_pocket"
                android:textColor="@drawable/step_mode_btn"
                android:textSize="25sp"
                android:textStyle="normal|bold" />

            <RadioButton

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
                android:layout_margin="10dp"
            android:gravity="center"
            android:text="手臂模式"
            android:textColor="@drawable/step_mode_btn"
            android:textSize="25sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/button"
            android:layout_width="123dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:background="@drawable/step_btn_background"
            android:text="确定"
            android:textColor="@drawable/step_btn_color"
            android:textAlignment="center" />

    </LinearLayout>


</LinearLayout>